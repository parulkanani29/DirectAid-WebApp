@using Utility;
@model AidWebApp.Models.ApplicationViewModel

<div class="loder"></div>

<div class="modal fade" id="submit-application" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="submit-application-label">Submit Your Application</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="SubmitApplication">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="@Model.Category" asp-items="Html.GetEnumSelectList<Enums.ApplicationCategory>()" class="form-control"> </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdentificationNumber" class="control-label"></label>
                        <input asp-for="IdentificationNumber" class="form-control" />
                        <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AverageIncome" class="control-label"></label>
                        <input asp-for="AverageIncome" type="number" class="form-control" />
                        <span asp-validation-for="AverageIncome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WalletPassword" class="control-label"></label>
                        <input asp-for="WalletPassword" type="password" class="form-control" />
                        <span asp-validation-for="WalletPassword" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">                
                <button type="button" class="btn btn-primary" id="submit-application-btn" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

<link href="~/css/preloader.css" rel="stylesheet" />
<script src="~/js/jquery.preloader.js" type="text/javascript"></script>